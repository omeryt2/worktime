<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent">
    <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/account_change_password_error"
            style="@style/WorkTimeValidationError"
            android:visibility="gone"/>

    <EditText android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:hint="@string/lbl_account_change_password_old_password"
              android:id="@+id/account_change_password_old_password"
              android:inputType="textPassword"/>
    <EditText android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:hint="@string/lbl_account_change_password_new_password"
              android:id="@+id/account_change_password_new_password"
              android:inputType="textPassword"/>
    <EditText android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:hint="@string/lbl_account_change_password_new_password_repeat"
              android:id="@+id/account_change_password_new_password_repeat"
              android:inputType="textPassword"/>
</LinearLayout>