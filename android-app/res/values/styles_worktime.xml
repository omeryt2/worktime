<resources>

    <style name="Theme.Worktime" parent="@style/Theme.Sherlock.Light">
        <item name="actionBarItemBackground">@drawable/selectable_background_worktime</item>
        <item name="popupMenuStyle">@style/PopupMenu.Worktime</item>
        <item name="dropDownListViewStyle">@style/DropDownListView.Worktime</item>
        <item name="actionBarTabStyle">@style/ActionBarTabStyle.Worktime</item>
        <item name="actionDropDownStyle">@style/DropDownNav.Worktime</item>
        <item name="actionBarStyle">@style/ActionBar.Solid.Worktime</item>
        <item name="actionModeBackground">@drawable/cab_background_top_worktime</item>
        <item name="actionModeSplitBackground">@drawable/cab_background_bottom_worktime</item>
        <item name="actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Worktime</item>

        
    </style>

    <style name="ActionBar.Solid.Worktime" parent="@style/Widget.Sherlock.Light.ActionBar.Solid">
        <item name="background">@drawable/ab_solid_worktime</item>
        <item name="backgroundStacked">@drawable/ab_stacked_solid_worktime</item>
        <item name="backgroundSplit">@drawable/ab_bottom_solid_worktime</item>
        <item name="progressBarStyle">@style/ProgressBar.Worktime</item>
    </style>

    <style name="ActionBar.Transparent.Worktime" parent="@style/Widget.Sherlock.Light.ActionBar">
        <item name="background">@drawable/ab_transparent_worktime</item>
        <item name="progressBarStyle">@style/ProgressBar.Worktime</item>
    </style>
	
    <style name="PopupMenu.Worktime" parent="@style/Widget.Sherlock.Light.ListPopupWindow">	
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_worktime</item>	
    </style>
	
    <style name="DropDownListView.Worktime" parent="@style/Widget.Sherlock.Light.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background_worktime</item>
    </style>

    <style name="ActionBarTabStyle.Worktime" parent="@style/Widget.Sherlock.Light.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_worktime</item>
    </style>
	
    <style name="DropDownNav.Worktime" parent="@style/Widget.Sherlock.Light.Spinner.DropDown.ActionBar">
        <item name="android:background">@drawable/spinner_background_ab_worktime</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_worktime</item>
        <item name="android:dropDownSelector">@drawable/selectable_background_worktime</item>
    </style>
    
    <style name="ProgressBar.Worktime" parent="@style/Widget.Sherlock.Light.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_worktime</item>
    </style>
    
    <style name="ActionButton.CloseMode.Worktime" parent="@style/Widget.Sherlock.Light.ActionButton.CloseMode">
        <item name="android:background">@drawable/btn_cab_done_worktime</item>
    </style>
    
    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.Worktime.Widget" parent="@style/Theme.Sherlock">
        <item name="popupMenuStyle">@style/PopupMenu.Worktime</item>
        <item name="dropDownListViewStyle">@style/DropDownListView.Worktime</item>
    </style>

</resources>